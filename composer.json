{
  "name": "eureka/component-database",
  "description": "PHP database library.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Database\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Database\\Tests\\Unit\\": "./tests/unit",
      "Eureka\\Component\\Database\\Tests\\Integration\\": "./tests/integration"
    }
  },

  "require": {
    "php": "7.4.*||8.0.*||8.1.*||8.2.*||8.3.*||8.4.*",
    "ext-pdo": "*"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75.0",
    "phpstan/phpstan": "^2.1.16",
    "phpstan/phpstan-phpunit": "^2.0.6",
    "phpunit/phpcov": "^8.2.1",
    "phpunit/phpunit": "^9.6.23",
    "shipmonk/composer-dependency-analyser": "^1.8.3"
  }
}
